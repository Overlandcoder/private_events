<h1><%= @event.name %></h1>

<p><%= @event.date %></p>

<h2>Attendees:</h2>

<ul>
  <% @event.attendees.each do |attendee| %>
    <li><%= attendee.email %></li>
  <% end %>
</ul>

<% if @event.attendees.include?(current_user) %>
  <%= "You've chosen to attend this event." %>
<% else%>
  <%= button_to "Attend Event", invitations_path,
        params: { invitation: { attendee_id: current_user.id, created_event_id: @event.id } },
        :method => :post %>
<% end %>
